<%- include('partials/head', { title: project.title + " — Ashmit George Climate Report" }) %>

<section class="container mx-auto p-6">
  <div class="grid md:grid-cols-3 gap-8">
    <div class="md:col-span-2 space-y-6">
      <h1 class="text-3xl font-bold"><%= project.title %></h1>
      <% if (project.image) { %>
        <img class="rounded-xl" src="<%= project.image %>" alt="<%= project.title %>">
      <% } %>
      <article class="prose prose-invert max-w-none">
        <p><%= project.description %></p>
      </article>

      <% if (project.quote) { %>
      <blockquote class="italic border-l-4 pl-4">
        “<%= project.quote.text %>” — <%= project.quote.author %>
      </blockquote>
      <% } %>

      <a href="/solutions/projects" class="btn">Back</a>
    </div>

    <aside class="space-y-4">
      <div class="card bg-base-200">
        <div class="card-body">
          <h2 class="card-title">Sector</h2>
          <span class="badge badge-primary"><%= project.sector %></span>
        </div>
      </div>
      <% if (project.learnMore) { %>
      <a target="_blank" rel="noopener" href="<%= project.learnMore %>" class="btn btn-outline w-full">Learn more</a>
      <% } %>
    </aside>
  </div>
</section>

<%- include('partials/footer') %>

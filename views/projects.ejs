<%- include('partials/head', { title: "Projects â€” Ashmit George Climate Report" }) %>

<section class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Projects</h1>

  <div class="overflow-x-auto">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Sector</th>
          <th>Summary</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% projects.forEach(p => { %>
          <tr>
            <td><a class="link link-primary" href="/solutions/projects/<%= p.id %>"><%= p.title %></a></td>
            <td><span class="badge badge-outline"><%= p.sector %></span></td>
            <td><%= p.summary %></td>
            <td><a class="btn btn-sm btn-primary" href="/solutions/projects/<%= p.id %>">Details</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>

<%- include('partials/footer') %>
